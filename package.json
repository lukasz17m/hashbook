{
  "name": "hashbook",
  "version": "1.0.0",
  "description": "A simple webbook with markdowned and #hashtagged notes.",
  "main": "app.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "dev": "cross-env NODE_ENV=development webpack",
    "lint": "npm run lint:es && npm run lint:sass",
    "lint:es": "eslint --ext .js,.vue .",
    "lint:sass": "sass-lint -v -c .sass-lint.yml src/assets/scss/**/*.scss",
    "server:dev": "cross-env NODE_ENV=development node app.js",
    "server:prod": "cross-env NODE_ENV=production node app.js",
    "start": "npm run server:dev",
    "test": "cross-env NODE_ENV=test mocha test/**/*.test.js",
    "test:vue": "cross-env NODE_ENV=test mocha-webpack --webpack-config webpack.config.js --require test/vue/setup.js test/**/*.spec.js",
    "watch": "cross-env NODE_ENV=development webpack --watch"
  },
  "keywords": [
    "book",
    "hash",
    "markdown"
  ],
  "author": "≈Åukasz Mastela",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "detect-it": "^3.0.3",
    "express": "^4.16.2",
    "mongoose": "^4.12.6",
    "seedrandom": "^2.4.3",
    "vue": "^2.5.2",
    "vue-resource": "^1.3.4",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "bulma": "^0.6.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "copy-webpack-plugin": "^4.2.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-chai-friendly": "^0.4.0",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-import": "^2.8.0",
    "file-loader": "^1.1.5",
    "font-awesome": "^4.7.0",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^4.0.1",
    "mocha-webpack": "^1.0.1",
    "node-sass": "^4.5.3",
    "sass-lint": "^1.12.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "vue-loader": "^13.3.0",
    "vue-template-compiler": "^2.5.2",
    "vue-test-utils": "^1.0.0-beta.4",
    "webpack": "^3.8.1"
  }
}
